// This ensures ALL forms work immediately without setTimeout delays
document.addEventListener('DOMContentLoaded', function() {
    console.log('üîß Setting up universal form handler...');
    
    // Use event delegation to catch all form submissions
    document.body.addEventListener('submit', function(event) {
        const form = event.target;
        
        // Let specific handlers run first
        // This is a backup in case form handlers don't attach in time
        
        console.log('üìù Form submitted:', form.id);
    }, true); // Use capture phase
    
    // Also, whenever a modal is created, immediately attach handlers
    const originalCreateModal = window.createModal;
    if (originalCreateModal) {
        window.createModal = function(title, content) {
            const result = originalCreateModal(title, content);
            
            // Wait for DOM to update, but minimal delay
            requestAnimationFrame(() => {
                attachFormHandlers();
            });
            
            return result;
        };
    }
});

// Helper to attach form handlers immediately
function attachFormHandlers() {
    console.log('üîó Attaching form handlers...');
    
    // Find all forms in modals
    const forms = document.querySelectorAll('.modal-overlay form');
    
    forms.forEach(form => {
        if (form.dataset.handlerAttached) {
            return; // Already handled
        }
        
        form.dataset.handlerAttached = 'true';
        console.log('‚úÖ Handler attached to:', form.id);
    });
}

