			URL.revokeObjectURL(url);
			
			alert('Tasks exported successfully!');
			console.log('‚úÖ Tasks exported');
		} catch (error) {
			console.error('‚ùå Export error:', error);
			alert('Error exporting tasks: ' + error.message);
		}
	}
	
