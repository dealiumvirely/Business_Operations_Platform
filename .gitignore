// ========================================
function updateFinancialSummary() {
    console.log('üí∞ Updating Financial Summary Canvas...');
    
    try {
        const state = window.state || JSON.parse(localStorage.getItem('virelyOpsState') || '{}');
        
        // Calculate totals
        const transactions = state.transactions || [];
        const revenue = transactions
            .filter(t => t.type === 'revenue')
            .reduce((sum, t) => sum + (parseFloat(t.amount) || 0), 0);
        const expenses = transactions
            .filter(t => t.type === 'expense')
            .reduce((sum, t) => sum + (parseFloat(t.amount) || 0), 0);
        const netProfit = revenue - expenses;
        
        // Count platform activities
        const contactCount = (state.contacts || []).length;
        const eventCount = (state.calendarEvents || []).length;
        const noteCount = (state.notes || []).length;
        const txCount = transactions.length;
        
        console.log('   Revenue:', revenue);
        console.log('   Expenses:', expenses);
        console.log('   Net Profit:', netProfit);
        console.log('   Transactions:', txCount);
        console.log('   Contacts:', contactCount);
        console.log('   Events:', eventCount);
        console.log('   Notes:', noteCount);
        
        // Update UI
        const revenueEl = document.getElementById('financialRevenueTotal');
        const expenseEl = document.getElementById('financialExpenseTotal');
        const netProfitEl = document.getElementById('financialNetProfit');
        const txCountEl = document.getElementById('financialTxCount');
        const contactCountEl = document.getElementById('financialContactCount');
        const eventCountEl = document.getElementById('financialEventCount');
        const noteCountEl = document.getElementById('financialNoteCount');
        
        if (revenueEl) revenueEl.textContent = '$' + revenue.toLocaleString();
        if (expenseEl) expenseEl.textContent = '$' + expenses.toLocaleString();
        if (netProfitEl) {
            netProfitEl.textContent = '$' + netProfit.toLocaleString();
            netProfitEl.style.color = netProfit >= 0 ? 'var(--success)' : 'var(--danger)';
        }
        if (txCountEl) txCountEl.textContent = txCount;
        if (contactCountEl) contactCountEl.textContent = contactCount;
        if (eventCountEl) eventCountEl.textContent = eventCount;
        if (noteCountEl) noteCountEl.textContent = noteCount;
        
        console.log('‚úÖ Financial Summary updated');
        
    } catch (error) {
        console.error('‚ùå Error updating Financial Summary:', error);
    }
}

// Helper function for activity logs
function addActivityLog(message, type = 'info') {
    console.log(`Activity: ${message}`);
    
    // Add to activities array
    try {
        const state = window.state || JSON.parse(localStorage.getItem('virelyOpsState') || '{}');
        if (!state.activities) state.activities = [];
        
        const activity = {
            id: Date.now(),
            action: message,
            when: new Date().toISOString(),
            type: type
        };
        
        state.activities.unshift(activity); // Add to beginning
        
        // Keep only last 50 activities
        if (state.activities.length > 50) {
            state.activities = state.activities.slice(0, 50);
        }
        
        localStorage.setItem('virelyOpsState', JSON.stringify(state));
        window.state = state;
        
        // Update activity feed
        renderMini();
        
    } catch (error) {
        console.error('Error adding activity log:', error);
    }
}

