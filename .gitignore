// Patch setTimeout to use shorter delays for form operations
const originalSetTimeout = window.setTimeout;
window.setTimeout = function(callback, delay, ...args) {
    // If delay is 100ms or more and involves forms, reduce it
    if (delay >= 100) {
        const callbackStr = callback.toString();
        if (callbackStr.includes('form') || callbackStr.includes('addEventListener')) {
            console.log('‚ö° Reducing setTimeout delay from', delay, 'to 0ms for form operation');
            delay = 0;
        }
    }
    return originalSetTimeout(callback, delay, ...args);
};


