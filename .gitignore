}

.form-group {
margin-bottom: 20px;
}

.form-group label {
display: block;
font-size: 13px;
font-weight: 600;
color: var(--text-secondary);
margin-bottom: 8px;
text-transform: uppercase;
letter-spacing: 0.5px;
}

.form-group input,
.form-group select,
.form-group textarea {
width: 100%;
padding: 12px 16px;
background: rgba(255,255,255,0.03);
border: 1px solid var(--glass-border);
