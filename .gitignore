// Sync Event with Google Calendar
async function syncEventWithGoogleCalendar(eventData, action = 'create') {
    if (!googleCalendarInitialized) {
        throw new Error('Google Calendar not initialized. Please configure your API credentials.');
    }
    
    try {
        // Sign in if not already signed in
        const authInstance = gapi.auth2.getAuthInstance();
        if (!authInstance.isSignedIn.get()) {
            await authInstance.signIn();
        }
        
        const eventResource = {
            'summary': eventData.title,
            'description': eventData.description || '',
            'start': {
                'dateTime': new Date(eventData.dateTime).toISOString(),
                'timeZone': Intl.DateTimeFormat().resolvedOptions().timeZone
            },
            'end': {
                'dateTime': new Date(new Date(eventData.dateTime).getTime() + 3600000).toISOString(),
                'timeZone': Intl.DateTimeFormat().resolvedOptions().timeZone
            }
        };
        
        let request;
        if (action === 'update' && eventData.googleEventId) {
            // Update existing event
            request = gapi.client.calendar.events.update({
                'calendarId': 'primary',
                'eventId': eventData.googleEventId,
                'resource': eventResource
            });
        } else {
            // Create new event
            request = gapi.client.calendar.events.insert({
                'calendarId': 'primary',
                'resource': eventResource
            });
        }
        
        const response = await request;
        console.log('Google Calendar sync successful:', response);
        return response.result;
    } catch (error) {
        console.error('Google Calendar sync error:', error);
        throw error;
    }
}

