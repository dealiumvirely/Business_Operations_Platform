// Marketing Channel Drill-down
function showChannelDrilldown(channelId) {
	const modal = document.getElementById('panelDrilldownModal');
	const title = document.getElementById('panelModalTitle');
	const content = document.getElementById('panelModalContent');
	
	if (!modal || !title || !content) return;
	
	const channel = state.marketingChannels.find(ch => ch.id === channelId);
	if (!channel) return;
	
	const ctr = channel.clicks > 0 && channel.impressions ? ((channel.clicks / channel.impressions) * 100).toFixed(2) : 0;
	const cpc = channel.clicks > 0 ? (channel.spent / channel.clicks).toFixed(2) : 0;
	const conversionRate = channel.clicks > 0 ? ((channel.conversions / channel.clicks) * 100).toFixed(2) : 0;
	const cpa = channel.conversions > 0 ? (channel.spent / channel.conversions).toFixed(2) : 0;
	const roi = channel.spent > 0 ? (((channel.conversions * 100) - channel.spent) / channel.spent * 100).toFixed(1) : 0;
	
	title.textContent = `${channel.name} - Detailed Analytics`;
	
	let html = `
