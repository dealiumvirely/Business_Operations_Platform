// Close Calendar Edit Modal
window.closeCalendarEditModal = function() {
    console.log('üö™ closeCalendarEditModal() called');
    try {
        const modal = document.getElementById('calendarEditModal');
        if (!modal) {
            console.error('‚ùå #calendarEditModal not found');
            return;
        }
        
        modal.classList.remove('active');
        modal.style.opacity = '0';
        modal.style.visibility = 'hidden';
