}

.insight-item, .activity-item {
padding: 10px 14px;
margin-bottom: 10px;
background: rgba(255,255,255,0.03);
border-left: 3px solid var(--accent-primary);
border-radius: 8px;
font-size: 12px;
line-height: 1.6;
transition: all 0.3s ease;
}

.insight-item:hover, .activity-item:hover {
background: rgba(255,255,255,0.06);
