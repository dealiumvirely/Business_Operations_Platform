function deleteCampaign(id) {
	if (!confirm('Delete this campaign? This action cannot be undone.')) return;
	state.campaigns = state.campaigns.filter(c => c.id !== id);
	save();
	renderAdvertising();
	showToast('Campaign deleted');
}

