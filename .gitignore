// Stripe Integration Logic for New Customers
function handleStripeRevenueUpdate(stripeData) {
    // Smart logic to detect new customer from Stripe revenue updates
    // Stripe webhook payload typically includes: customer, charge, subscription data
    if (stripeData.type === 'charge.succeeded' || stripeData.type === 'invoice.payment_succeeded') {
        const isNewCustomer = stripeData.isNewCustomer || checkIfNewStripeCustomer(stripeData);
        
        if (isNewCustomer) {
            const state = window.state || JSON.parse(localStorage.getItem('virelyOpsState') || '{}');
            if (!state.newCustomers) state.newCustomers = [];
            
            const newCustomer = {
                id: Date.now(),
                name: stripeData.customerName || stripeData.customer?.name || 'New Customer',
                amount: stripeData.amount || stripeData.charge?.amount / 100, // Stripe amounts are in cents
                date: new Date().toISOString(),
                source: 'stripe',
                plan: stripeData.plan || stripeData.subscription?.plan?.name || 'Standard',
                stripeCustomerId: stripeData.customer?.id || null
            };
            
            state.newCustomers.push(newCustomer);
            localStorage.setItem('virelyOpsState', JSON.stringify(state));
            window.state = state;
            updateNewCustomers();
            
            // Show notification
            addActivityLog(`üéâ New customer via Stripe: ${newCustomer.name} - $${newCustomer.amount.toLocaleString()}`, 'success');
            
            // Update revenue metrics
            if (state.mrr) {
                state.mrr = (state.mrr || 0) + (newCustomer.amount / 12);
                localStorage.setItem('virelyOpsState', JSON.stringify(state));
            }
            
            console.log('‚úÖ Stripe customer processed:', newCustomer);
        }
    }
}

// Helper function to check if this is a new customer in Stripe
function checkIfNewStripeCustomer(stripeData) {
    // Check if this customer already exists in our records
    const state = window.state || JSON.parse(localStorage.getItem('virelyOpsState') || '{}');
    const customers = state.newCustomers || [];
    const stripeCustomerId = stripeData.customer?.id;
    
    if (!stripeCustomerId) return false;
    
    // Check if we've already recorded this Stripe customer
    const existingCustomer = customers.find(c => c.stripeCustomerId === stripeCustomerId);
    return !existingCustomer;
}

// Webhook handler for Stripe events
function processStripeWebhook(webhookPayload) {
    // This would be called by your backend when Stripe sends a webhook
    // Validate webhook signature first (done on backend)
    
    const eventType = webhookPayload.type;
    const eventData = webhookPayload.data?.object;
    
    console.log('üì¨ Stripe webhook received:', eventType);
    
    // Process different Stripe event types
    switch (eventType) {
        case 'charge.succeeded':
        case 'invoice.payment_succeeded':
        case 'checkout.session.completed':
            handleStripeRevenueUpdate({
                type: eventType,
                customerName: eventData.customer_details?.name || eventData.customer_name,
                amount: eventData.amount_total ? eventData.amount_total / 100 : eventData.amount / 100,
                customer: { id: eventData.customer, name: eventData.customer_details?.name },
                plan: eventData.lines?.data[0]?.price?.nickname || 'Standard',
                isNewCustomer: true // Your backend should determine this
            });
            break;
        
        case 'customer.subscription.created':
            handleStripeRevenueUpdate({
                type: eventType,
                customerName: eventData.customer_name,
                amount: eventData.plan.amount / 100,
                customer: { id: eventData.customer },
                subscription: { plan: { name: eventData.plan.nickname || 'Standard' } },
                isNewCustomer: true
            });
            break;
        
        default:
            console.log('‚ÑπÔ∏è Unhandled Stripe event type:', eventType);
    }
}

