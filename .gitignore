if (highAlerts.includes(alert.rule.type)) return { level: 'High', color: '#ffb86b', icon: 'üü†' };
if (mediumAlerts.includes(alert.rule.type)) return { level: 'Medium', color: '#60a5fa', icon: 'üü°' };
