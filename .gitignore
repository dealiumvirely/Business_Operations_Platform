// Google Calendar Integration
let googleCalendarInitialized = false;
let currentEditingEvent = null;

function initGoogleCalendar() {
    if (typeof gapi === 'undefined') {
        console.log('Google API not loaded yet');
        return;
    }
    
    gapi.load('client:auth2', () => {
        gapi.client.init({
            apiKey: 'YOUR_API_KEY', // Replace with actual API key
            clientId: 'YOUR_CLIENT_ID', // Replace with actual client ID
            discoveryDocs: ['https://www.googleapis.com/discovery/v1/apis/calendar/v3/rest'],
            scope: 'https://www.googleapis.com/auth/calendar'
        }).then(() => {
            googleCalendarInitialized = true;
            console.log('Google Calendar initialized');
        }).catch(err => {
            console.error('Google Calendar init error:', err);
        });
    });
}

function syncWithGoogleCalendar() {
    if (!googleCalendarInitialized) {
        alert('Google Calendar not initialized. Please configure your API credentials in the code.');
        return;
    }
    
    gapi.auth2.getAuthInstance().signIn().then(() => {
        const event = {
            'summary': document.getElementById('eventTitle').value,
            'description': document.getElementById('eventDescription').value,
            'start': {
                'dateTime': new Date(document.getElementById('eventDateTime').value).toISOString(),
                'timeZone': 'America/New_York'
            },
            'end': {
                'dateTime': new Date(new Date(document.getElementById('eventDateTime').value).getTime() + 3600000).toISOString(),
                'timeZone': 'America/New_York'
            }
        };
        
        const request = gapi.client.calendar.events.insert({
            'calendarId': 'primary',
            'resource': event
        });
        
        request.execute(event => {
            alert('Event synced with Google Calendar!');
            console.log('Event created:', event);
        });
    }).catch(err => {
        console.error('Google Calendar sync error:', err);
        alert('Failed to sync with Google Calendar: ' + err.message);
    });
}

