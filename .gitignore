    const listEl = document.getElementById('notificationsList');
    
    if (!listEl) return;
    
    if (notifications.length === 0) {
        listEl.innerHTML = `
            <div class="notifications-empty">
                <svg viewBox="0 0 24 24" fill="currentColor" style="fill: var(--text-muted);">
                    <path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2zm6-6v-5c0-3.07-1.63-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.64 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"/>
                </svg>
                <p>No notifications</p>
            </div>
        `;
        return;
    }
    
    // Sort by timestamp, newest first
    const sortedNotifications = [...notifications].sort((a, b) => 
        new Date(b.timestamp) - new Date(a.timestamp)
    );
    
    listEl.innerHTML = sortedNotifications.map(notif => {
        const timeAgo = getTimeAgo(notif.timestamp);
        const unreadClass = notif.unread ? 'unread' : '';
        const typeClass = `notification-type-${notif.type || 'info'}`;
        
        return `
            <div class="notification-item ${unreadClass}" data-id="${notif.id}">
                <div class="notification-header">
                    <div class="notification-title">${notif.title}</div>
                    <div class="notification-time">${timeAgo}</div>
                </div>
                <div class="notification-message">${notif.message}</div>
                <div class="notification-actions">
                    <span class="notification-type-badge ${typeClass}">${notif.type || 'info'}</span>
                    <button class="notification-dismiss" onclick="dismissNotification(${notif.id})">
                        Dismiss
                    </button>
                </div>
            </div>
        `;
    }).join('');
}

// Get time ago string
function getTimeAgo(timestamp) {
    const now = new Date();
    const time = new Date(timestamp);
    const seconds = Math.floor((now - time) / 1000);
    
    if (seconds < 60) return 'Just now';
    if (seconds < 3600) return Math.floor(seconds / 60) + 'm ago';
    if (seconds < 86400) return Math.floor(seconds / 3600) + 'h ago';
    if (seconds < 604800) return Math.floor(seconds / 86400) + 'd ago';
    return time.toLocaleDateString();
}

// Update notification badge
function updateNotificationBadge() {
    if (!window.state) return;
    
    const notifications = window.state.notifications || [];
    const unreadCount = notifications.filter(n => n.unread).length;
    
    const badge = document.getElementById('notificationBadge');
    if (badge) {
        if (unreadCount > 0) {
            badge.textContent = unreadCount > 99 ? '99+' : unreadCount;
            badge.style.display = 'flex';
        } else {
            badge.style.display = 'none';
        }
    }
}

// Mark all notifications as read
function markAllAsRead() {
    if (!window.state || !window.state.notifications) return;
    
    window.state.notifications.forEach(n => n.unread = false);
    
    if (typeof saveState === 'function') {
        saveState();
    } else if (typeof save === 'function') {
        save();
    }
    
    updateNotificationBadge();
}

// Dismiss a specific notification
function dismissNotification(notificationId) {
    console.log('üóëÔ∏è Dismissing notification:', notificationId);
    
    if (!window.state || !window.state.notifications) return;
    
    window.state.notifications = window.state.notifications.filter(n => n.id !== notificationId);
    
    if (typeof saveState === 'function') {
        saveState();
    } else if (typeof save === 'function') {
        save();
    }
    
    renderNotifications();
    updateNotificationBadge();
    
    console.log('‚úÖ Notification dismissed');
}

// Clear all notifications
function clearAllNotifications() {
    console.log('üóëÔ∏è Clearing all notifications...');
    
    if (!window.state) return;
    
    window.state.notifications = [];
    
    if (typeof saveState === 'function') {
        saveState();
    } else if (typeof save === 'function') {
        save();
    }
    
    renderNotifications();
    updateNotificationBadge();
    
    console.log('‚úÖ All notifications cleared');
}

// Add a new notification
function addNotification(title, message, type = 'info') {
    console.log('üîî Adding notification:', title);
    
    if (!window.state) {
        console.warn('‚ö†Ô∏è window.state not available');
        return;
    }
    
    if (!window.state.notifications) window.state.notifications = [];
    
    const notification = {
        id: Date.now(),
        title: title,
        message: message,
        type: type, // 'success', 'info', 'warning', 'danger'
        timestamp: new Date().toISOString(),
        unread: true
    };
    
    window.state.notifications.unshift(notification); // Add to beginning
    
    // Keep only last 50 notifications
    if (window.state.notifications.length > 50) {
        window.state.notifications = window.state.notifications.slice(0, 50);
    }
    
    if (typeof saveState === 'function') {
        saveState();
    } else if (typeof save === 'function') {
        save();
    }
    
    renderNotifications();
    updateNotificationBadge();
    
    console.log('‚úÖ Notification added');
}

// Initialize notifications after state is loaded - see initialization section below

// Integrate notifications with existing actions
// Override addActivityLog to also create notifications for important events
const originalAddActivityLog = window.addActivityLog;
window.addActivityLog = function(message, type = 'info') {
    // Call original function
    if (originalAddActivityLog) {
        originalAddActivityLog(message, type);
    }
    
    // Add notification for important activities
    if (type === 'success' || type === 'warning' || type === 'danger') {
        const titles = {
            'success': 'Success',
            'warning': 'Warning',
            'danger': 'Error',
            'info': 'Info'
        };
        addNotification(titles[type] || 'Info', message, type);
    }
};

console.log('‚úÖ Notifications system loaded and ready!');

</script>
