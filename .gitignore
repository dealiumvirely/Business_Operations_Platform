const mediumAlerts = ['high_cac', 'ltv_cac_ratio', 'transaction_volume', 'aov_change', 'clv_drop', 'new_customers', 'data_quality'];
const lowAlerts = ['mrr_growth', 'product_performance', 'contact_engagement'];

