padding: 20px;
backdrop-filter: blur(20px) saturate(180%);
box-shadow: var(--shadow-md);
transition: all 0.3s ease;
}

.mini-panel:hover {
border-color: rgba(110,231,183,0.2);
box-shadow: var(--shadow-lg);
